<p id="notice"><%= notice %></p>
<p>
<div class="col-sm-6 col-md-3">
<%@movie.posters.each do |p|%>
    <div class="thumbnail">
        <%=image_tag p.file("medium")%>
    </div>

<%end%>
  <h4><%= @movie.title %></h4>
</p>
<p>
  <strong>Official Trailer:</strong>
  <div style="margin-left: 50%">
    <iframe width="560" height="349" src=<%= "http://www.youtube.com/embed/#{@movie.code}" %>></iframe>
  </div>
</p>

</div>
<b>Cast: </b>
<% @movie.actors.each do |a| %>
  <%=a.name%>
<%end%>

<p>
  <strong>Plot:</strong>
  <%= raw @movie.plot %>
</p>
<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @movie.genre %>
</p>

<p>
  <strong>Time:</strong>
  <%= @movie.time %>
</p>

<p>
  <%= rating_for @movie, 'rating' %>
</p>
<% if @reviews.blank? %>
  <%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
<% end %>

<% @movie.reviews.each do |r| %>
  <div class="col-sm-5">
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong><%= current_user.email %></strong> <span class="text-muted">commented 5 days ago</span>
      </div>
          <div class="panel-body">
           <%= r.content %>
        </div><!-- /panel-body -->
    </div><!-- /panel panel-default -->
  </div><!-- /col-sm-5 -->
<% end %>
<%= link_to "Write Review", new_movie_review_path(@movie), class: "btn btn-danger" %>
<% if can? :manage , @movie %>
  <%= link_to 'Edit', edit_movie_path, class: "btn btn-primary" %>
  <%= link_to 'Delete', @movie, method: :delete, data: { confirm: 'Are you sure?' },
  class: "btn btn-primary" %>
<% end %>
