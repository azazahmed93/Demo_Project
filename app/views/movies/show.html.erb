<p id="notice"><%= notice %></p>
<p>
<div class="col-sm-6 col-md-3">
<%@movie.posters.each do |p|%>
    <div class="thumbnail">
        <%=image_tag p.file("medium")%>
    </div>
  
<%end%>
  <h4><%= @movie.title %></h4>
</p>
<p>
  <strong>Official Trailer:</strong>
  <div style="margin-left: 50%">
  <iframe width="560" height="349" src=<%= "http://www.youtube.com/embed/#{@movie.code}" %>></iframe> 
  </div>
</p>
</div>
<b>Cast: </b> 
<% @movie.actors.each do |a| %>
  <%=a.name%>
<%end%>

<p>
  <strong>Plot:</strong>
  <%= raw @movie.plot %>
</p>
<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @movie.genre %>
</p>

<p>
  <strong>Time:</strong>
  <%= @movie.time %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>
<%if can? :manage , @movie%>
<%= link_to 'Back', movies_path, class: "btn btn-primary" %>
<%= link_to 'Edit', edit_movie_path, class: "btn btn-primary" %>
<%end%>


