<p id="notice"><%= notice %></p>
<p>
  <%@movie.posters.each do |p|%>
  <%=image_tag p.file%>
  <%end%>
 <h1><%= @movie.title %></h1>
</p>

<p>
  <strong>Plot:</strong>
  <%= @movie.plot %>
</p>

<p>
  <strong>Official Trailer:</strong>
  <div>
  <iframe width="560" height="349" src=<%= "http://www.youtube.com/embed/#{@movie.code}" %>></iframe> 
  </div>
</p>

<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @movie.genre %>
</p>

<p>
  <strong>Time:</strong>
  <%= @movie.time %>
</p>

<p>
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

