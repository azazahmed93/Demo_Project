<div class="col-sm-6 col-md-3">
  <% @movie.posters.each do |p| %>
    <div class="thumbnail">
      <%= image_tag p.file("medium") %>
    </div>
  <% end %>
  <h4><%= @movie.title %></h4>

  <p>
    <strong>Official Trailer:</strong>
    <div class="trailer">
      <iframe width="560" height="349" src=<%= "http://www.youtube.com/embed/#{@movie.youtube_id}" %>></iframe>
    </div>
  </p>

  <div class= "container-fluid">
    <div class = "row" id = "reviews_style">
      <div id="reviews">
        <p>
          </br><%= render @reviews %>
        </p>
      </div>
    </div>
  </div>
</div>

<b>Cast: </b>
<%= @actors.pluck(:name).join(', ') %>

<p>
  <strong>Plot:</strong>
  <%= raw @movie.plot %>
</p>
<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @movie.genre %>
</p>

<p>
  <strong>Time:</strong>
  <%= @movie.time %>
</p>

<% if cannot? :manage, @movie %>
  <p>
    <%= rating_for @movie, 'rating' %>
  </p>
<% end %>

<% if user_signed_in? %>
  <% if can? :manage , @movie %>
    <%= link_to 'Edit', edit_movie_path, class: "btn btn-primary" %>
    <%= link_to 'Delete', @movie, method: :delete, data: { confirm: 'Are you sure?' },
    class: "btn btn-primary" %>
  <% else %>
    <%= link_to "Write Review", new_movie_review_path(@movie), remote: true, id: "add_review",  class: "btn btn-danger" %>
  <% end %>
<% end %>
