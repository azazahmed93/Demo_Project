<p>
  <% if can? :manage, Movie %>
    <%= link_to 'Add Movie', new_movie_path, class: "btn btn-primary" %>
  <%end%>
</p>
<div class="panel-body">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <a href="<%= movie_path(movie) %>"> <%= image_tag movie.posters.first.file("medium") %> </a>
      </div>
    </div>
  <% end %>
</div>
<%= paginate @movies %>
