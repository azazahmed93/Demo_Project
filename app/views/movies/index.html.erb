<p id="notice"><%= notice %></p>
<div class="panel panel-info" class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to "Latest Movies" %></h3>
  </div>
  <div class="panel-body">
    <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <a href="<%= movie_path(movie) %>"> <%= image_tag movie.posters.first.file("medium") %> </a>
      </div>
    </div>
  <% end %>
  </div>
</div>

