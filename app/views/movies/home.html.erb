<div class="panel panel-info" class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">
      <span>Latest Movies</span>
      <span class="pull-right"><%= link_to "View All" , movies_path(type: "latest") %></span>
    </h3>
  </div>
  <div class="panel-body">
    <% @latest_movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <a href="<%= movie_path(movie) %>"> <%= image_tag movie.posters.first.file("medium") %></a>
      </div>
    </div>
  <% end %>
  </div>
</div>

