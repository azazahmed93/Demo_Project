<div class="container">
  <h2>Movie Reviews</h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Movie</th>
        <th>Review</th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @reviews.each do |review| %>
        <tr>
          <td><%= review.movie.title %></td>
          <td><%= review.content %></td>
          <td><%= review.user.email %></td>
          <td><%= link_to 'Destroy', [review.movie, review], method: :delete,
          data: { confirm: 'Are you sure?' } %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @reviews %>
