<div class="container target">
  <div class="row">
    <div class="col-sm-10">
      <h3 class=""></h3>
      <% if can? :manage, @actor %>
       <%= link_to 'Edit Actor', edit_actor_path(@actor), class: 'btn btn-primary' %>
      <% end %>
      <br>
    </div>
  </div>
</div>
<br>

<div class="col-sm-3" style="margin-top: 8.5%">
  <ul class="list-group">
    <li class="list-group-item text-muted" contenteditable="false"><h2><%= @actor.name %></h2></li>
    <li class="list-group-item text-right"><span class="pull-left"><strong class="">Joined</strong></span><%= time_ago_in_words(@actor.created_at) %>-ago</li>
  </ul>
  <div class="panel panel-info">
    <i class="fa fa-twitter fa-2x"></i> <i class="fa fa-pinterest fa-2x"></i>  <i class="fa fa-google-plus fa-2x"></i>
  </div>
</div>

<div class="panel panel-info target" class="col-md-2">
  <div class="panel-heading txt" contenteditable="false"><h2>Movie Appearances</h2></div>
  <div class="panel-body">
    <div class="row">
      <div class="panel-body">
        <% @actor.movies.each do |movie| %>
          <div class="col-sm-6 col-md-3">
            <div class="thumbnail">
              <a href="<%= movie_path(movie) %>"> <%= image_tag movie.posters.first.file("medium") %></a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
